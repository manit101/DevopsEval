pipeline{
    agent any

    tools {
        nodejs 'nodejs'
    }

    stages{

        stage('Install Dependencies'){
            steps{
                sh 'npm install || echo "No dependencies defined"'
            }
        }
        stage('Test'){
            steps{
                sh 'npm test || echo "No tests defined"'
            }
        }
        stage('Build'){
            steps{
                sh 'npm run build || echo "No build defined"'
            }
        }
    }
}