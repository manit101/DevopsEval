pipeline{
    agent any

    tools {
        maven 'maven'
    }

    stages{

        stage('Install Dependencies'){
            steps{
                bat 'npm install'
            }
        }
        stage('Test'){
            steps{
                bat 'npm test || echo "No tests defined"'
            }
        }
        stage('Build'){
            steps{
                bat 'npm run build'
            }
        }
    }
}